<h1>Luodut uutiset</h1>

<%= will_paginate @news %>

<table>
  <thead>
    <tr>
      <th>Otsikko</th>
      <th>Luotu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @uutiset.each do |uutiset| %>
      <tr>
        <td><%= uutiset.title %></td>
        <td><%= uutiset.created_at.strftime("%-d.%-m.%-Y %H:%M") %><!--<%= uutiset.body.html_safe %>--></td>
        <td><%= link_to 'Näytä', uutiset %></td>
        <td><%= link_to 'Muokkaa', edit_uutiset_path(uutiset) %></td>
        <td><%= link_to 'Poista', uutiset, method: :delete, data: { confirm: 'Oletko varma?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Luo uusi uutinen', new_uutiset_path %>
