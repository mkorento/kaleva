<h1>Luodut uutiset</h1>

<% if !@uutiset.empty? %>
<%= will_paginate @news, renderer: BootstrapPagination::Rails %>

<table id="news" class="table table-striped tablesorter-blue">
  <thead>
    <tr>
      <th>Otsikko</th>
      <th>Luotu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @uutiset.each do |uutiset| %>
      <tr>
        <td><%= uutiset.title %></td>
        <td><%= uutiset.created_at.strftime("%-d.%-m.%-Y %H:%M") %><!--<%= uutiset.body.html_safe %>--></td>
        <td><%= link_to 'Näytä', uutiset, class: "label label-primary" %></td>
        <td><%= link_to 'Muokkaa', edit_uutiset_path(uutiset), class: "label label-primary" %></td>
        <td><%= link_to 'Poista', uutiset, class: "label label-danger", method: :delete, data: { confirm: 'Oletko varma?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

          <%= will_paginate @news, renderer: BootstrapPagination::Rails %>

          <script type="text/javascript">

        $(document).ready(function () {
                    $("#news").tablesorter( {headers: {2: {sorter:false}}});

                }
        );
    </script>
<style type="text/css">
  table#news td, th { padding: 5px;}
</style>
<br>
    <% else %>
    <p>Ei luotuja uutisia</p>
<% end %>
<%= link_to 'Luo uusi uutinen', new_uutiset_path, :class => "btn btn-primary" %>
