<h2>
  <%= link_to edit_user_path(@user) do %>
  <%= @user.first_name %> <%= @user.last_name %>
  <% end %>
</h2>

<% if not current_user.nil? and current_user.id == @user.id %>
<% if not @enrollments.nil? or @enrollment.count > 0 %>

  <h4>Olet ilmoittautunut seuraaviin tapahtumiin:</h4>
        <p>
          <% @enrollments.each do |enrollment|%>
    <%= link_to enrollment.event.name, enrollment_path(enrollment.id), class: 'label label-primary' %><br>
  <% end %>
</p>
<% end %>
<% if not @group.nil? %>
   <p>
     <strong>Kuulut joukkueeseen: </strong>
     <%= link_to @group.name, group_path(@group) %>
   </p>
<% end %>
<% end %>
